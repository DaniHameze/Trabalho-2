        let mercurio = document.getElementById("mercurio");
        let venus = document.getElementById("venus");
        let marte = document.getElementById("marte");   

        mercurio.addEventListener("click", function(){let userChoice = prompt("Mercurio");
        if(userChoice){
            document.write("User chose" + userChoice + "for choice mercurio");
            alert("Voce escolheu" + userChoice + "para mercurio");
        }
    });
        
        venus.addEventListener("click", function(){let userChoice = prompt("Venus");});
        marte.addEventListener("click", function(){let userChoice = prompt("Marte");});
    </script>

